@using Deneme.Entity
@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<p>Ürün Sayfası</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün # </th>
            <th>Ürün Adı</th>
            <th>Ürün Stok Miktarı</th>
            <th>Ürün Fiyatı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Stock</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>